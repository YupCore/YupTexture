{
  "version": 2,
  "configurePresets": [
    {
      "name": "x64-dbg",
      "displayName": "x64-Debug (vcpkg)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/x64-dbg",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    },
	{
	  "name": "x64-rel",
	  "displayName": "x64-Release (vcpkg)",
	  "generator": "Ninja",
	  "binaryDir": "${sourceDir}/out/build/x64-rel",
	  "cacheVariables": {
		"CMAKE_BUILD_TYPE": "Release",
		"CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
	  }
	},
	{
	  "name": "x64-rel-dbg",
	  "displayName": "x64-Release with PDB (vcpkg)",
	  "generator": "Ninja",
	  "binaryDir": "${sourceDir}/out/build/x64-rel-dbg",
	  "cacheVariables": {
		"CMAKE_BUILD_TYPE": "RelWithDebInfo",
		"CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
	  }
	}
  ]
}